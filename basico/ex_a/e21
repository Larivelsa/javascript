/**Crie um código para armazenar apenas os carros do ano. 
 * a variável "hoje" recebe a data atual do sistema. 
 * Armazene o ano atual na variável "anoAtual" */

const carros = [
    { marca: 'Fiat', modelo: 'Uno', anoFabricacao: 2015 },
    { marca: 'GM', modelo: 'Onix', anoFabricacao: 2018 },
    { marca: 'Ford', modelo: 'KA+', anoFabricacao: 2018 },
    { marca: 'Fiat', modelo: 'Cronos', anoFabricacao: 2021 },
];

const hoje = new Date();
const anoAtual = hoje.getFullYear();

const carrosDoAno = carros.filter(carro => carro.anoFabricacao == anoAtual);

console.log(carrosDoAno);